* {
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Fira Sans', sans-serif;
  /* background-image: url(<%= asset_path('ambreen-hasan-346960-unsplash.jpg') %>); */
  background-size: 100%;
  background: #FEFEFE;
  color: #212121;
}

header {
  background: #5D576B;
  color: #FFFFFF;
  /* height: 80px; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
}

header a {
  color: #FFFFFF;
  text-decoration: none;
  font-size: 24px;
}

header form[action="/logout"] {
  display: inline;
  margin-left: 20px;
  background-color: transparent;
}

header input[type="submit"] {
  color: #FFFFFF;
  text-decoration: none;
  font-size: 24px;
  border: none;
  background-color: transparent;
  margin: 0;
  padding: 0;
}

header input[type="submit"]:hover {
  color: #8884FF;
  background-color: transparent;
}

nav a {
  margin-left: 20px;
}

a:hover {
  color: #8884FF;
  border-color: #8884FF;
  transition: .2s ease-in-out;
}

main {
  height: calc(100vh - 70px);
  background-color: #FEFEFE;
}

textarea {
  width: 100%;
  margin-bottom: 20px;
  font-size: 16px;
  height: 250px;
}

/* Homepage */

main#homepage {
  background-image: url(<%= asset_path('alfons-morales-410757-unsplash.jpg') %>);
  background-color: gray;
  background-blend-mode: multiply;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #FFF;
}

#homepage #button-container {
  display: flex;
  justify-content: space-around;
}

main#homepage h1 {
  font-size: 8rem;
  margin-top: 15%;
  padding: 0;
  width: auto;
}

.subtitle {
  font-size: 3rem;
  text-align: center;
}

#button-container a {
  font-size: 1.5rem;
  color: #FFF;
  text-decoration: none;
  border: 1px solid white;
  border-radius: .2em;
  padding: 12px;
  min-width: 90px;
  text-align: center;
  margin: 10px;
  transition: .2s ease-in-out;
}

#button-container p {
  margin-top: 30px;
}

main h1 {
  padding: 40px 0 0 40px;
}

/* New Profile */


h1 {
  width: 400px;
  margin: 0 auto;
  text-align: center;
  padding-top: 80px;
}

form {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width: 400px;
  margin: 40px auto;
  background-color: #2F243A;
  padding: 20px;
}

form label {
  align-self: flex-start;
  font-size: 18px;
  color: #FFF;
}

/* Forms */

form input {
  border: none;
  border-bottom: 2px solid #FFF;
  background-color: #2F243A;
  width: 100%;
  height: 30px;
  font-size: 16px;
  /* margin-left: 10px; */
  margin-bottom: 40px;
  transition: .1s ease-in-out;
  color: #FFF;
}

form input:focus {
  outline: none;
  border-bottom: 2px solid #8884FF;
  transition: .3s ease-in-out;
}

input[type="submit"] {
  border: 1px solid #FFF;
  color: #FFF;
  width: auto;
  height: auto;
  font-size: 18px;
  padding: 12px;
  border-radius: .2em;
  align-self: flex-end;
  margin: 0;
}

input[type="submit"]:hover {
  cursor: pointer;
  background-color: #8884FF;
  border-color: #8884FF;
  color: #FFF;
}

/* Topics */

#topics h1 {
  margin: 0;
  width: 200px;
  padding: 0;
}

#topic-posts h1 {
  margin: 0;
  width: 200px;
  padding: 0;
}

.heading-btn-container {
  padding-top: 40px;
  display: flex;
  align-items: center;
  padding-bottom: 10px;
}

.heading-btn-container a {
  text-decoration: none;
  border: 1px solid #8884FF;
  border-radius: .2em;
  padding: 7px;
}

.list-container {
  display: flex;
  flex-direction: column;
  border-right: 3px solid #8884FF;
  width: 50%;
  height: calc(100vh - 70px);
}

.list-element-container {
  border-top: 1px solid #8884FF;
  min-height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-element-container:last-of-type {
  border-top: 1px solid #8884FF;
  border-bottom: 1px solid #8884FF;
}

.element {
  padding-left: 10px;
}

.element-links {
  padding-right: 10px;
}

.post-container {
  display: flex;
  flex-direction: column;
  width: 70%;
}

.post-title {
  margin-top: 12px;
  margin-bottom: 12px;
}

.post-body {
  margin-bottom: 12px;
}

/* User Pages */

.user-posts-container {
  display: flex;
  flex-direction: column;
  padding-left: 20px;
  border-top: 3px solid #8884FF;
}

.user-posts-container h3 {
  font-size: 48px;
}

.user-posts-container h4 {
  border-top: 2px solid #8884FF;
  padding-top: 8px;
  font-size: 28px;
}

.user-posts-container h5 {
  /* border-bottom: 2px solid #8884FF; */
}
