* {
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Fira Sans', sans-serif;
  /* background-image: url(<%= asset_path('ambreen-hasan-346960-unsplash.jpg') %>); */
  background-size: 100%;
  background: #FFFFFF;
  color: #212121;
}

header {
  background: #212121;
  color: #FFFFFF;
  /* height: 80px; */
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 20px;
}

header a {
  color: #FFFFFF;
  text-decoration: none;
  font-size: 24px;
  height: 70px;
}

a:hover {
  color: #64ffda;
  border-color: #64ffda;
  transition: .2s ease-in-out;
}

main {
  height: calc(100vh - 70px);
}

/* Homepage */

main#homepage {
  background-image: url(<%= asset_path('alfons-morales-410757-unsplash.jpg') %>);
  background-color: gray;
  background-blend-mode: multiply;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #FFF;
}

#homepage #button-container {
  display: flex;
  justify-content: space-around;
}
#homepage h1 {
  font-size: 8rem;
  margin-top: 15%;
}

.subtitle {
  font-size: 3rem;
}

#button-container a {
  font-size: 1.5rem;
  color: #FFF;
  text-decoration: none;
  border: 1px solid white;
  border-radius: .2em;
  padding: 12px;
  min-width: 90px;
  text-align: center;
  margin: 10px;
  transition: .2s ease-in-out;
}

#button-container a:hover {
  color: #64ffda;
  border-color: #64ffda;
  transition: .2s ease-in-out;
}

#button-container p {
  margin-top: 30px;
}

/* New Profile */

main#new-profile {
  background-color: #b2dfdb;
}

#new-profile h1 {
  width: 400px;
  margin: 0 auto;
  text-align: center;
  padding-top: 80px;
}

#new-profile form {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  width: 400px;
  margin: 40px auto;
}

#new-profile form label {
  align-self: flex-start;
  font-size: 18px;
}

/* Forms */

form input {
  border: none;
  border-bottom: 2px solid #696969;
  background-color: #b2dfdb;
  width: 100%;
  height: 30px;
  font-size: 16px;
  margin-left: 10px;
  margin-bottom: 40px;
  transition: .1s ease-in-out;
}

form input:focus {
  outline: none;
  border-bottom: 2px solid #000;
  transition: .3s ease-in-out;
}

input[type="submit"] {
  border: 1px solid #000;
  color: #000;
  width: auto;
  height: auto;
  font-size: 18px;
  padding: 12px;
  border-radius: .2em;
  align-self: flex-end;
}

input[type="submit"]:hover {
  cursor: pointer;
  background-color: #00796b;
  border-color: #00796b;
  color: #FFF;
}
