%h1 Create a Profile
=form_for @user do |f|
  =f.label :first_name
  =f.text_field :first_name

  =f.label :last_name
  =f.text_field :last_name

  =f.label :email
  =f.text_field :email

  =f.label :password
  =f.text_field :password

  =f.check_box :is_teacher, {}, 'true', 'false'
  =f.label :is_teacher, 'I\'m a teacher!'

  =f.submit
