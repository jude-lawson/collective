%main#new-profile
  %h1 Create a Profile
  =form_for @user do |f|
    =f.label :first_name
    =f.text_field :first_name, placeholder: 'Minerva'

    =f.label :last_name
    =f.text_field :last_name, placeholder: 'McGonagall'

    =f.label :email
    =f.text_field :email, placeholder: 'mmcgonagall@hogwarts.com'

    =f.label :password
    =f.password_field :password, required: true, placeholder: 'Pick a good one!'

    =f.submit
